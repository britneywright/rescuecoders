    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field"> 
    <%= f.label :kind_list, "Type" %><br>
    <%= f.text_field :kind_list %>
  </div>
  <div class="field">
    <%= f.label :level_list, "Level" %><br>
    <%= f.text_field :level_list %>
  </div>
  <div class="field">
    <%= f.label :price_list, "Cost" %><br>
    <%= f.text_field :price_list %>
  </div>
  <div class="field">
    <%= f.label :language_list, "Language/Framework" %><br>    
    <%= f.text_field :language_list %> 
  </div>
  <div class="actions">
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>    
  </div>
<% end %>
  </div>  
</div>
