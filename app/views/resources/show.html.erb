<% provide(:title, @resource.name) %>
<p id="notice"><%= notice %></p>
  <h2><%= @resource.name %></h2>


  <div class="col-md-4">  
    <div class= "row">
          <div class="col-md-6">
      Liked by: <%= @resource.liked_by_count %>
    </div>
    <div class="col-md-6">
      Disliked by: <%= @resource.disliked_by_count %>
    </div>
      </div>
    <%= render 'likes_button' if signed_in? %>
<div class="well">
<p>
  <strong>Url:</strong>
  <%= link_to @resource.url, @resource.url %>
</p>

<p>
  <strong>Language(s):</strong>
    <% @resource.languages.each do |l| %>
      <%= link_to l.name, l %>
    <% end %>
  </ul>
</p>

<p>
  <strong>Kind:</strong>
    <% @resource.kinds.each do |k| %>
      <%= link_to k.name, k %>
    <% end %></p>

<p>
  <strong>Level:</strong>
    <% @resource.levels.each do |lv| %>
      <%= link_to lv.name, lv %>
    <% end %></p>

<p>
  <strong>Price:</strong>
    <% @resource.prices.each do |p| %>
      <%= link_to p.name, p %>
    <% end %></p>
</div>

<%= link_to 'Edit', edit_resource_path(@resource), class: "btn btn-default" %> 
<%= link_to 'Back', resources_path, class: "btn btn-default" %>
</div>

<div class="col-md-8">
<p>
  <strong>Description:</strong>
  <%= @resource.description %>
</p>
</div>
